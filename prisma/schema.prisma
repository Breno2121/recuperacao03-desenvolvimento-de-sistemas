generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Library {
  id               String   @id
  isbn             String   @unique
  title            String
  authors          String[]
  publication_year String
  page_count       String
  created_at       DateTime
  updated_at       DateTime

  @@map("library")
}
